generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int         @id @default(autoincrement())
  name          String
  email         String       @unique
  phone         String
  password      String
  phoneVerified Boolean      @default(false)
  phoneOTP      String?
  otpExpiresAt  DateTime?
  role          Role         @default(USER)
  createdAt     DateTime     @default(now())

  chatSessions  ChatSession[]
  aiQueries AiQueryLog[]  
}

enum Role {
  USER
  ADMIN
}

model Listing {
  id             Int             @id @default(autoincrement())
  title          String          @unique
  price          Int?
  description    String?
  city           String?
  image          String?
  link           String          @unique
  source         ListingSource
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt       @default(now())
  convertedPrice Float?
  currency       String?
  transaction    TransactionType @default(UNKNOWN)

  ai ListingAI?

}

enum ListingSource {
  OLX
}

enum TransactionType {
  RENT
  SALE
  UNKNOWN
}

model ListingAI {
  id             Int       @id @default(autoincrement())
  listingId      Int       @unique
  cleanTitle     String?
  propertyType   String?
  transaction    TransactionType? 
  rooms          Int?
  summary        String?
  highlights     String[]  @default([])
  features       String[]  @default([])
  priceRON       Int?
  priceEUR       Int?
  city           String?
  zone           String?
  image          String?   // ðŸ‘ˆ AICI am adÄƒugat imaginea
  link           String? 
  isOwner        Boolean?
  qualityScore   Int?
  aiVersion      Int       @default(1)
  updatedAt      DateTime  @updatedAt

  Listing Listing @relation(fields: [listingId], references: [id])
}

enum ChatRole {
  USER
  ASSISTANT
}

model ChatSession {
  id        Int           @id @default(autoincrement())
  userId    Int
  user      User          @relation(fields: [userId], references: [id])
  title     String?
  createdAt DateTime      @default(now())
  messages  ChatMessage[]
}

model ChatMessage {
  id            Int       @id @default(autoincrement())
  chatSessionId Int
  chatSession   ChatSession @relation(fields: [chatSessionId], references: [id])
  role          ChatRole
  content       String      // textul complet al mesajului (JSON string la bot, dacÄƒ vrei)
  metadata      Json?
  createdAt     DateTime    @default(now())
}

model AiQueryLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  message   String
  rooms     Int?       // extras automat din mesaj
  propertyType String? // apartament, casa, garsoniera, vila etc.
  transaction String?  // RENT / SALE
  city      String?    // Bucuresti, Timisoara etc.

  createdAt DateTime @default(now())
}