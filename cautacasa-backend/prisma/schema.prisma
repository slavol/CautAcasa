generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int         @id @default(autoincrement())
  name          String
  email         String       @unique
  phone         String
  password      String
  phoneVerified Boolean      @default(false)
  phoneOTP      String?
  otpExpiresAt  DateTime?
  role          Role         @default(USER)
  createdAt     DateTime     @default(now())
}

enum Role {
  USER
  ADMIN
}